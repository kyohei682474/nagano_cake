<div class="container mt-3 mt-1">
  <h2>新規登録</h2>



  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table>
     <tr>
         <td>名前</td>
         <td>(姓)</td>
         <td><%= f.text_field :last_name, :size=>"25" %></td>
         <td>(名)</td>
         <td><%= f.text_field :first_name, :size=>"25" %></td>
     </tr>
     <tr><td>　</td></tr>
     <tr>
         <td>フリガナ</td>
         <td>セイ</td>
         <td><%= f.text_field :last_name_kana, :size=>"25" %></td>
         <td>メイ</td>
         <td><%= f.text_field :first_name_kana, :size=>"25" %></td>
     </tr>
　　 <tr><td>　</td></tr>
     <tr>
         <td>メールアドレス</td>
         <td></td>
         <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"25" %></td>
         <td></td>
         <td></td>
     </tr>
     <tr><td>　</td></tr>
     <tr>
         <td>郵便番号</td>
         <td></td>
         <td><%= f.text_field :postal_code, :size=>"25" %></td>
         <td></td>
         <td></td>
     </tr>
     <tr><td>　</td></tr>
     <tr>
         <td>住所</td>
         <td></td>
         <td colspan="4"><%= f.text_field :address, :size=>"60" %></td>
     </tr>
     <tr><td>　</td></tr>
     <tr>
         <td>電話番号(ハイフン無し)</td>
         <td></td>
         <td><%= f.text_field :telephone_number, :size=>"25" %></td>
         <td></td>
         <td></td>
     </tr>
     <tr><td>　</td></tr>
     <tr>
         <td><%= f.label :password,"パスワード(６文字以上)" %></td>
         <td></td>
         <td><%= f.password_field :password, autocomplete: "new-password", :size=>"25" %></td>
         <td></td>
         <td></td>
     </tr>
     <tr><td>　</td></tr>
     <tr>
         <td><%= f.label :password_confirmation,"パスワード(確認用)  " %></td>
         <td></td>
         <td><%= f.password_field :password_confirmation, autocomplete: "new-password", :size=>"25" %></td>
         <td></td>
         <td></td>
     </tr>
     <tr><td>　</td></tr>
     <tr>
         <td></td>
         <td></td>
         <td><%= f.submit "新規登録", class:"btn btn-success w-50" %></td>
         <td></td>
     </tr>
    </table>



  <% end %>

  <p><span class=" p-2 mr-2 bg-secondary position-absolute.bottom-0.end-0">既に登録済みの方</span>

  <%= render "public/shared/links" %>
 </div>
