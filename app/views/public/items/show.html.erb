<div class="container">
 <div class="row">
  <div class="col">
<p><%= image_tag @item.image ,size: "200x200" %></p>
  </div>


  <div class="col">
    <h4><%= @item.name %></h4>
    <p><%= @item.introduction %></p>
    <div class="d-flex">
    <h4>¥<%= (@item.price*1.1).floor %></h4>
    <div style="font-size:5px; padding-top:10px;">(税抜)</div>
    </div>

    <%= form_with model:@cart_item , url:cart_items_path, method: :post do |f| %>

    <p><%= f.select :amount,*[1..10] ,{ include_blank: '--個数選択--', selected: 0 }%>個</p>
       <%= f.hidden_field :item_id, :value => @item.id %>
    <p><%= f.submit 'カートに入れる' ,class:"btn btn-success w-45" %></p>
    <% end %>
  </div>
 </div>

</div>