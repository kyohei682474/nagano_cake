

<%= form_with model: @customer, url: customers_infomation_path, method: :get do |f| %>



<h4 class="fs-1" style= "margin-left: 70px; background-color:#adb5bd; width: 145px;">会員情報編集</h4>
<table class="table w-53 "style="margin-left: 50px ">

     <tr>
         <td class="col-2">氏名</td>
         <td class="col-3"><%= f.text_field :last_name %></td>
         <td class="col-5"><%= f.text_field :first_name %></td>
     </tr>

      <tr>
         <td class="col-2">かな</td>
         <td class="col-3"><%= f.text_field :last_name_kana %></td>
         <td class="col-5"><%= f.text_field :first_name_kana %></td>
     </tr>

      <tr>
         <td class="col-2">郵便番号</td>
         <td class="col-3"><%= f.text_field :postal_code %></td>
     </tr>

     <tr>
         <td class="col-2">住所</td>
         <td class="col-3"><%= f.text_field :address,:size=>"40" %></td>
     </tr>

     <tr>
         <td class="col-2">電話番号</td>
         <td class="col-3"><%= f.text_field :telephone_number%></td>
     </tr>

      <tr>
         <td class="col-2">メールアドレス</td>
         <td class="col-3"><%= f.text_field :email%></td>
     </tr>


</table>
   <div class="d-flex">
    <div style="margin-left: 345px"><%= f.submit '編集内容を保存' ,class:"btn btn-success w-45" %></div>
    <div style="margin-left: 250px"><%= link_to "退会する", customers_unsubscribe_path ,class:"btn btn-danger w-30" %></div>
   </div>

<% end %>

